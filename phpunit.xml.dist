<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php"
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    verbose="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false">
    <testsuites>
        <testsuite name="comodojo-cache-travis">
            <file>tests/Cache/ApcTest.php</file>
            <file>tests/Cache/FilesystemTest.php</file>
            <file>tests/Cache/MemcachedTest.php</file>
            <file>tests/Cache/PhpRedisTest.php</file>
            <file>tests/Cache/DatabaseTest.php</file>
            <file>tests/Cache/BackwardsTest.php</file>
            <file>tests/Cache/CachePickFirstTest.php</file>
            <file>tests/Cache/CachePickLastTest.php</file>
            <file>tests/Cache/CachePickRandomTest.php</file>
            <file>tests/Cache/CachePickAllTest.php</file>
            <file>tests/Cache/CachePickByWeightTest.php</file>
        </testsuite>
    </testsuites>
    <testsuites>
        <testsuite name="comodojo-cache-unsupported">
            <file>tests/Cache/XCacheTest.php</file>
        </testsuite>
    </testsuites>
    <testsuites>
        <testsuite name="comodojo-cache-unstable">
            <file>tests/Cache/DatabaseTest.php</file>
        </testsuite>
    </testsuites>
    <testsuites>
        <testsuite name="comodojo-cache-apc">
            <file>tests/Cache/ApcTest.php</file>
        </testsuite>
    </testsuites>
    <testsuites>
        <testsuite name="comodojo-cache-all">
            <directory>tests/Cache/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="tap" target="build/report.tap"/>
        <log type="junit" target="build/report.junit.xml"/>
        <log type="coverage-html" target="build/coverage" charset="UTF-8" yui="true" highlight="true"/>
        <log type="coverage-text" target="build/coverage.txt"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>
